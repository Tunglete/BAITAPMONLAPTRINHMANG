        <div class="form-group" id="uploadulli">
            <div id="drop" style="margin-left:450px;">
                <a style="padding:20px; text-decoration:none; color:#fff; background:#057ff5;cursor:pointer;">Chọn File cần Upload</a>
                <input type="file" multiple id="" style="display:none;" />
            </div>

            <ul>
                <!-- The file uploads will be shown here -->
            </ul>
        </div>
        </br></br>
        <div>
            <button type="button" class="btn btn-success" onclick="luu(@ViewBag.page)" style="margin:5px 5px;">Lưu</button>
            <button type="button" class="btn btn-danger" onclick="dong()" style="margin:5px ;">Đóng</button>
        </div>

    </form>

</div>
