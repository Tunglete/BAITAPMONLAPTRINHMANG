
@{
    Layout = null;
}
<div class="widget-title">
    <span class="icon"> <i class="icon-align-justify"></i> </span>
    <h5>Thêm Ảnh Slide cho trang chủ</h5>
</div>
<div class="upload widget-content nopadding">
    <form id="upload" class="form-horizontal" method="post" action="/QuanLySlideTrangChu/UploadFile" enctype="multipart/form-data">
