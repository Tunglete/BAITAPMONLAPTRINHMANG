@using WebDienThoaiDiDong.Areas.Admin.Models.QuanLySliderAnhSanPham;
@model PagingQuanLySliderAnhSanPham
@{
    Layout = null;
}
<script>
    var actionUrl = {
        urlAdd: '@Url.Action("Add","QuanLySliderAnhSanPham")',
        urlSave: '@Url.Action("Save", "QuanLySliderAnhSanPham")',
        urlDanhsachslideranhsanpham: '@Url.Action("DanhSachAnhSanPhamTable", "QuanLySliderAnhSanPham")',
        urlDelete : '@Url.Action("Delete", "QuanLySliderAnhSanPham")'
    }
</script>
<script src="~/Areas/Admin/Scripts/QuanLySliderAnhSanPham/ActionCrud.js"></script>
<link href="~/Areas/Admin/Content/css/mypaging.css" rel="stylesheet" />
<div class="widget-content nopadding">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr class="success">
                <th style="background:#28B779; color:white;font-size:13px;">Mã sản phẩm</th>
                <th style="background:#28B779; color:white;font-size:13px;">Tên sản phẩm </th>
                <th style="background:#28B779; color:white;font-size:13px;">Ảnh siler</th>
                <th style="background:#28B779; color:white;font-size:13px;">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.List)
            {
                <tr>
                    <th style="font-size:11px;width:120px;padding-top:40px;">@item.SAN_PHAM.MaSanPham</th>
                    <th style="font-size:11px;width:150px;padding-top:40px;">@item.SAN_PHAM.TenSanPham</th>
                    <th><img src="~/Images/ImagesSliderProduct/@item.AnhMinhHoa" style="width:100px;; height:100px;"/></th>
                    <th style="font-size:11px;width:100px;padding-top:35px;">
                        <button style="font-size: 12px; margin-top:-3px; border-radius:3px;margin-bottom:3px;border-radius:4px;" type="button" class="btn btn-danger" onclick="Delete(@item.MaAnhSanPham,@Model.page)">Xóa</button>
                    </th>

                </tr>
            }

        </tbody>

    </table>
</div>
@if (Model.totalpage > 1)
{
    <div class="pagination">
        <nav>
            <ul>
                @if (Model.page <= 1)
                {
                    <li><a style="background:#337AB7; color:#fff;cursor:not-allowed;">Previous</a></li>
                }
                else
                {
                    <li><a style="background:#337AB7;color:#fff; cursor:pointer;" id="previous" onclick="previous(@Model.page)">Previous</a></li>
                }

                <li><span style="background:#337AB7; color:#fff;">Trang <span style="font-weight:bold;">@Model.page</span>/<span style="font-weight:bold;">@Model.totalpage</span></span></li>
                @if (Model.page >= Model.totalpage)
                {
                    <li><a style="background:#337AB7; color:#fff; width:40px;cursor:not-allowed;">Next</a></li>
                }
                else
                {
                    <li><a style="background:#337AB7;color:#fff; cursor:pointer;" id="next" onclick="next(@Model.page)">Next</a></li>
                }

            </ul>
        </nav>
    </div>
}
