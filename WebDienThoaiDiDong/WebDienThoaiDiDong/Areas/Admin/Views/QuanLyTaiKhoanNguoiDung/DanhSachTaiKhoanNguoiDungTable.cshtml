@using WebDienThoaiDiDong.Areas.Admin.Models.QuanLyTaiKhoanNguoiDung;
@model PagingQuanLyTaiKhoanNguoiDung
@{
    Layout = null;
}
<script>
    var actionUrl = {
        urlEdit: '@Url.Action("Edit", "QuanLyTaiKhoanNguoiDung")',
        urlDelete : '@Url.Action("Delete", "QuanLyTaiKhoanNguoiDung")',
        urlnguoidungtable : '@Url.Action("DanhSachTaiKhoanNguoiDungTable", "QuanLyTaiKhoanNguoiDung")'
    }
</script>
<script src="~/Areas/Admin/Scripts/QuanLyTaiKhoanNguoiDung/ActionCrud.js"></script>
<link href="~/Areas/Admin/Content/css/mypaging.css" rel="stylesheet" />
<div class="widget-content nopadding">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr class="success">
                <th style="background:#28B779; color:white;font-size:13px;">Mã khách hàng</th>
                <th style="background:#28B779; color:white;font-size:13px;">Tên khách hàng</th>
                <th style="background:#28B779; color:white;font-size:13px;">Tên đăng nhập</th>
                <th style="background:#28B779; color:white;font-size:13px;">Mật khẩu</th>
                <th style="background:#28B779; color:white;font-size:13px;">Ngày sinh</th>
                <th style="background:#28B779; color:white;font-size:13px;">Giới tính</th>
                <th style="background:#28B779; color:white;font-size:13px;">Mail</th>
                <th style="background:#28B779; color:white;font-size:13px;">Điện thoại</th>
                <th style="background:#28B779; color:white;font-size:13px;">Địa chỉ</th>
                <th style="background:#28B779; color:white;font-size:13px;">Ngày tạo</th>
                <th style="background:#28B779; color:white;font-size:13px;">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.List)
            {
                <tr>
                    <th style="font-size:11px;width:50px;">@item.MaKhachHang</th>
                    <th style="font-size:11px;">@item.TenKhachHang</th>
                    <th style="font-size:11px;">@item.TenDangNhap</th>
                    <th style="font-size:11px;">@item.MatKhau</th>
                    <th style="font-size:11px;">@item.NgaySinh</th>
                    @if (item.GioiTinh == true)
                    {
                        <th style="font-size:11px;">Nam</th>
                    }
                    else
                    {
                        <th style="font-size:11px;">Nữ</th>
                    }

                    <th style="font-size:11px;">@item.Mail</th>
                    <th style="font-size:11px;">@item.DienThoai</th>
                    <th style="font-size:11px;">@item.DiaChi</th>
                    <th style="font-size:11px;">@item.NgayTao</th>
                    <th style="font-size:11px;width:100px;padding-top:10px;">
                        <button style="font-size: 12px; margin-top:-3px; border-radius:3px;margin-bottom:3px;border-radius:4px;" type="button" class="btn btn-danger" onclick="Delete(@item.MaKhachHang,@Model.page)">Xóa</button>
                    </th>

                </tr>
            }

        </tbody>

    </table>
</div>
@if (Model.totalpage > 1)
{
    <div class="pagination">
        <nav>
            <ul>
                @if (Model.page <= 1)
                {
                    <li><a style="background:#337AB7; color:#fff;cursor:not-allowed;">Previous</a></li>
                }
                else
                {
                    <li><a id="previous" onclick="previous(@Model.page)">Previous</a></li>
                }

                <li><span style="background:#337AB7; color:#fff;">Trang <span style="font-weight:bold;">@Model.page</span>/<span style="font-weight:bold;">@Model.totalpage</span></span></li>
                @if (Model.page >= Model.totalpage)
                {
                    <li><a style="background:#337AB7; color:#fff; width:40px;cursor:not-allowed;">Next</a></li>
                }
                else
                {
                    <li><a id="next" onclick="next(@Model.page)">Next</a></li>
                }

            </ul>
        </nav>
    </div>
}

<!--phần Edit-->
<div class="widget-box" id="div_edit">
</div>


